{
  "name": "proton",
  "version": "0.0.1",
  "description": "A service for converting HTML to PDF using headless Chromium",
  "main": "./app.js",
  "scripts": {
    "start": "APP_ENABLE_CANCELLABLE_PROMISES=true service-runner",
    "test": "APP_ENABLE_CANCELLABLE_PROMISES=true PREQ_CONNECT_TIMEOUT=15 mocha",
    "docker-start": "APP_ENABLE_CANCELLABLE_PROMISES=true service-runner docker-start",
    "docker-test": "APP_ENABLE_CANCELLABLE_PROMISES=true service-runner docker-test",
    "test-build": "APP_ENABLE_CANCELLABLE_PROMISES=true service-runner docker-test && service-runner build --deploy-repo --force",
    "coverage": "APP_ENABLE_CANCELLABLE_PROMISES=true nyc --reporter=lcov _mocha"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/wikimedia/mediawiki-services-chromium-render.git"
  },
  "keywords": [
    "PDF",
    "chromium"
  ],
  "author": "Wikimedia Readers Web Team",
  "contributors": [
    "Wikimedia Readers Web Team"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://phabricator.wikimedia.org/tag/proton/"
  },
  "homepage": "https://github.com/wikimedia/mediawiki-services-chromium-render",
  "dependencies": {
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "cassandra-uuid": "^0.0.2",
    "compression": "^1.7.1",
    "domino": "^1.0.30",
    "express": "^4.16.2",
    "http-shutdown": "^1.2.0",
    "js-yaml": "^3.10.0",
    "preq": "^0.5.6",
    "puppeteer-core": "1.9.0",
    "service-runner": "^2.7.3",
    "swagger-router": "^0.7.1",
    "swagger-ui": "git+https://github.com/wikimedia/swagger-ui.git#master"
  },
  "devDependencies": {
    "ajv": "^5.5.0",
    "eslint": "^4.12.0",
    "eslint-config-node-services": "^2.2.5",
    "eslint-config-wikimedia": "^0.5.0",
    "eslint-plugin-jsdoc": "^3.0.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "extend": "^3.0.1",
    "mocha": "^4.0.1",
    "mocha-eslint": "^4.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "13.3.0"
  },
  "deploy": {
    "target": "debian:stretch",
    "node": "6.11.1",
    "env": {
      "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium",
      "APP_ENABLE_CANCELLABLE_PROMISES": true
    },
    "dependencies": {
      "debian": [
        "chromium",
        "fonts-liberation",
        "fonts-noto"
      ],
      "_all": []
    }
  }
}
